{
	"name": "@unusual-components/components-ui-react",
	"version": "0.1.0",
	"description": "Components UI React",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/unusual-components/components-ui-react.git"
	},
	"keywords": [
		"components",
		"ui",
		"react"
	],
	"authors": [
		{
			"name": "Felipe Freitas Silva",
			"email": "eu.felipefreitassilva@gmail.com"
		},
		{
			"name": "Lucca Tisser Paradeda",
			"email": "luccatisserparadeda@gmail.com"
		}
	],
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/unusual-components/components-ui-react/issues"
	},
	"homepage": "https://github.com/unusual-components/components-ui-react#readme",
	"type": "module",
	"files": [
		"dist"
	],
	"main": "./dist/index.umd.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.umd.cjs"
		},
		"./dist/style.css": {
			"import": "./dist/style.css",
			"require": "./dist/style.css"
		}
	},
	"scripts": {
		"prepare": "husky install",
		"start": "storybook dev -p 6006",
		"format": "prettier --write .",
		"findDeadcode": "ts-prune",
		"build": "tsc && vite build",
		"lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --resolve-plugins-relative-to . && echo 'âœ… Lint OK!'",
		"test": "cypress run",
		"test:open": "cypress open",
		"build:storybook": "storybook build"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run lint && npm run findDeadcode && npx pretty-quick --staged",
			"pre-push": "npm run test"
		}
	},
	"dependencies": {
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"styled-components": "^5.3.9",
		"vite": "^4.3.0",
		"vite-plugin-dts": "^2.3.0"
	},
	"devDependencies": {
		"@storybook/addon-essentials": "^7.0.6",
		"@storybook/addon-interactions": "^7.0.6",
		"@storybook/addon-links": "^7.0.6",
		"@storybook/blocks": "^7.0.6",
		"@storybook/react": "^7.0.6",
		"@storybook/react-vite": "^7.0.6",
		"@storybook/testing-library": "^0.0.14-next.2",
		"@types/jest": "^29.5.1",
		"@types/node": "^18.16.0",
		"@types/react": "^18.0.28",
		"@types/react-dom": "^18.0.11",
		"@types/styled-components": "^5.1.26",
		"@typescript-eslint/eslint-plugin": "^5.55.0",
		"@typescript-eslint/parser": "^5.55.0",
		"@vitejs/plugin-react": "^3.1.0",
		"cypress": "^12.9.0",
		"eslint": "^8.36.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-react-refresh": "^0.3.4",
		"husky": "^8.0.0",
		"@commitlint/cli": "^17.4.4",
		"@commitlint/config-conventional": "^17.4.4",
		"eslint-config-standard-with-typescript": "^34.0.1",
		"eslint-plugin-import": "2.25.3",
		"eslint-plugin-jsx-a11y": "6.5.1",
		"eslint-plugin-n": "^15.0.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-promise": "^6.0.0",
		"eslint-plugin-react": "7.28.0",
		"lint-staged": "^13.2.0",
		"prettier": "^2.8.4",
		"pretty-quick": "^3.1.3",
		"prop-types": "^15.8.1",
		"storybook": "^7.0.6",
		"ts-prune": "^0.10.3",
		"typescript": "^4.6.3",
		"vite": "^4.3.0"
	},
	"resolutions": {
		"styled-components": "^5"
	}
}
